{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build-server",
            "type": "shell",
            "options": {
                "cwd": "${workspaceRoot}/server"
            },
            "command": "npm",
            "args": [
                "run",
                "build"
            ],
            "problemMatcher": [
                "$tsc"
            ],
        },
        {
            "label": "webpack-vendor",
            "type": "shell",
            "options": {
                "cwd": "${workspaceRoot}/client"
            },
            "command": "npm",
            "args": [
                "run",
                "webpack-vendor"
            ],
            "problemMatcher": [],
            "group": "build"
        },
        {
            "label": "client-clean",
            "type": "shell",
            "options": {
                "cwd": "${workspaceRoot}/client"
            },
            "command": "npm",
            "args": [
                "run",
                "clean"
            ],
            "problemMatcher": [],
            "group": "build"
        },
        {
            "label": "client-watch",
            "type": "shell",
            "dependsOn": "webpack-vendor",
            "options": {
                "cwd": "${workspaceRoot}/client"
            },
            "isBackground": true,
            "command": "npm",
            "args": [
                "run",
                "watch"
            ],
            "problemMatcher": [],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}