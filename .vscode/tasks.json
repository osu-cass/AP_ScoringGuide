{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "taskName": "build-server",
            "type": "shell",
            "options": {
                "cwd": "${workspaceRoot}/server"
            },
            "command": "npm",
            "args": [
                "run",
                "build"
            ]
        },
        {
            "taskName": "webpack-vendor",
            "type": "shell",
            "options": {
                "cwd": "${workspaceRoot}/client"
            },
            "command": "npm",
            "args": [
                "run",
                "webpack-vendor-dev"
            ],
            "problemMatcher": []
        },
        {
            "taskName": "webpack-watch",
            "type": "shell",
            "dependsOn": "webpack-vendor",
            "options": {
                "cwd": "${workspaceRoot}/client"
            },
            "isBackground": true,
            "command": "npm",
            "args": [
                "run",
                "watch"
            ],
            "problemMatcher": []
        }
    ]
}