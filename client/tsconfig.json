{
  "compilerOptions": {
    "alwaysStrict": true,
    "noImplicitAny": true,
    "noEmitOnError": false,
    "removeComments": false,
    "sourceMap": true,
    "module": "commonjs",
    "target": "es5",
    "jsx": "react",
    "strictNullChecks": true,
    "allowSyntheticDefaultImports": false,
    "lib": [
      "es5",
      "es6",
      "dom"
    ],
    "types": [
      "webpack-env",
      "jest"
    ],
    "typeRoots": [
      "../node_modules/@types"
    ],
    "plugins": [
      {
        "name": "tslint-language-service"
      }
    ]
  },
  "exclude": [
    "node_modules",
    "**/__tests__/*",
    "**/setupTest.ts"
  ],
  "jest": {
    "moduleDirectories": [
      "node_modules"
    ]
  }
}
